<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.megatictactoe.activity.MenuActivity"
    android:background="@drawable/wood_background">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/bNewGame"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/menu_button_lg_up"
        android:textColor="#000000"
        android:padding="0dp"
        android:layout_margin="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/bNewGame"
        android:layout_alignStart="@+id/bNewGame">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bNewGame"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Titles:"
                android:id="@+id/textView"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Size"
                android:id="@+id/bSelectSize"
                android:background="@drawable/menu_button_lg_up" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lsizesLayout"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15x15"
                android:id="@+id/b15x15"
                android:background="@drawable/menu_button_lg_up" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19x19"
                android:id="@+id/b19x19"
                android:background="@drawable/menu_button_lg_up" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24x24"
                android:id="@+id/b24x24"
                android:background="@drawable/menu_button_lg_up" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/bExit"
        android:layout_alignParentBottom="true"
        android:background="@drawable/menu_button_lg_up" />

</RelativeLayout>
